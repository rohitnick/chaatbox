
<div class="row container-fluid">
  <div class="col-md-9">
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-md-3 col-sm-6 padding-5">
        <div class="well well-sm bg-white product js-product" id="<%=product.id%>" >
          <%= image_tag(product.image_url, :width => 230 , :height => 160) %>
          <h5 class="js-product-name item-name"><%= product.name %></h5>
          <small><%= product.title %></small>
          <br>
          <span class="item-price"> &#8377<i class="js-product-price"><%= product.price %> </i></span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-3">
    <div class="well well-sm bg-transparent font-18">
      <div class="details display-none">
        <center><h3 class="white">Delivery Details</h3></center>
        <hr>
       <form id ="details" class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-12">
            <input type="text" class="form-control" id="name-input" name="name" placeholder="First & Last Name" required="true" value="">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <input type="integer" class="form-control" id="mobile-input"  pattern="[7-9]{1}\d{9}" name="mobile" size="10" placeholder="Mobile Number"  required="true"  value="">
        </div>
    </div> 
    <div class="form-group">
        <div class="col-sm-12">
            <input type="email" class="form-control" id="email-input" name="email" placeholder="example@domain.com"  required="true"  value="">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <textarea id="address-input" class="form-control" rows="4" name="address"  placeholder="Address"  required="true" ></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-8 col-sm-offset-3">
            <input id="finish" name="submit" type="submit"  value="Confirm Order" class="btn btn-primary">
       </div>
    </div>
    <div class="form-group hide">
        <div class="col-sm-8 col-sm-offset-3">
            <input id="hmm" name="submit" type="button" data-toggle="modal" data-target="#confirm" value="Confirm Order" class="btn btn-primary">
       </div>
     </div>
</form>
</div>
      <!-- End Delivery Details -->
      <!-- Order Summary -->
      <div id="line-items">
        <center class="dotted-bottom-border white">
           Order Total : &#8377<span id="total">0</span></b>
         </center>
         <p>
         </div>
         <!-- End Order Summary -->
         <div class="finish-message display-none white">
          <h3 class="text-center"><i>Thanks For Ordering</i></h3>
          <br>
          <br>
          <h5 class="text-center">You Will Recieve order within 40 minutes </h5>
        </div>

      </div>
      <center><button class="btn btn-success js-proceed">Proceed</button></center>
      <h4 class="please-select text-center red"></h4>
    </div>


    <div id="line-item-container" class="hide" >
      <div class="well well-sm bg-white line-item margin-5">
        <div class="row">
         <div class="col-sm-6 col-xs-6">
           <h5 id="line-item-inner" class="item-name"> </h5>
         </div>
         <div class="col-sm-1 col-xs-1 col-sm-offset-4 col-xs-offset-5 cross">
           <p class="red"><a href="#">&times</a></p>
         </div>
       </div>
       <div class="row">
        <div class="col-md-6">
          <div class="input-group">
            <span class="input-group-addon minus"><b><a href="#">-</b></a></span>
            <input type="integer" class="form-control num" area-label="Quantity" value="1">
            <span class="input-group-addon plus"><b><a href="#">+</b></a></span>
          </div>
        </div>
        <div class="col-md-6"> 
          <span class="prices hide"></span>
          <span class="item-price"> &#8377<i class="pricess"></i></span>
        </div>
      </div>
    </div>
  </div>
</div>



<div class="modal" id="confirm" tabindex="-1" role="dialog" aria-labelledby="confirmLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <i><h3 class="modal-title text-center" id="confirmLabel">Thanks For Ordering</h3></i>
      </div>
      <div class=" well weel-sm modal-body">
<div class="col-sm-12">
<h4>Order details:</h4>
</div>
<div class="row">
      <div class="confirmitemname col-sm-4">
       <h4>Items</h4>
       <i><h5 id="confirmname"></h5></i>
      </div>
      <div class="confirmitemquantity col-sm-8">
        <h4>Quantity</h4>
        <i><h5 id="confirmquantity"></h5></i>
      </div>

      <div class=" col-sm-12">
        <i><h4 class="confirmtotal"></h4></i>
      </div>
<br>
<br>
      <div class=" col-sm-12">
        <i><h4 class="confirmdetails"></h4></i>
      </div>
<br>
<hr>
<div class=" col-sm-12 text-center">
        <i><h4 class="red">***Order will be at your doorstep within 40 minutes***</h4></i>
      </div>
      <div>
        <button type="button" class="btn btn-danger float-right margin-right" id="closeconfirm" data-dismiss="modal">Close</button> 
      </div>
</div>
</div>
    </div>
  </div>
</div>

