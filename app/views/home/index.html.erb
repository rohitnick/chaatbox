<div class="row container-fluid">
  <div class="col-md-9">
    <center>
      <h5 class="white">OFFER : 10% discount on all orders above Rs 100. </h5></center>
    <div class="row">
      <% @products.each do |product| %>
      <div class="col-md-3 col-sm-6 padding-5 js-product" style="cursor: pointer;" id="<%=product.id%>">
        <%= image_tag(product.image_url, :width => '100%' , :height => 160, :class => "product-image")%>
        <div class="well well-sm bg-white product-details js-product-details" >
          <h4 class="js-product-name item-name"><%= product.name %></h4>
          <small><%= product.title %></small>
          <br>
          <span class="item-price"> &#8377<i class="js-product-price"><%= product.price %> </i></span>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-3">
    <br>
    <br>
    <div class="well well-sm bg-transparent font-18">


      <div class="details display-none">
        <center><h3 class="white">Delivery Details</h3></center>
        <hr>
        <form id ="details" class="form-horizontal">
          <div class="form-group">

            <div class="col-sm-12">
              <input type="text" class="form-control" id="name-input" name="name" placeholder="Full Name" required="true" value="">
            </div>
          </div>
          <div class="form-group">

            <div class="col-sm-12">
              <input type="integer" class="form-control" id="mobile-input"  pattern="[7-9]{1}\d{9}" name="mobile" size="10" placeholder="10 Digit Mobile Number"  required="true"  value="">
            </div>
          </div> 
          <div class="form-group">

            <div class="col-sm-12">
              <input type="email" class="form-control" id="email-input" name="email" placeholder="Your Email"  required="false"  value="">
            </div>
          </div>
          <div class="form-group">

            <div class="col-sm-12">
              <textarea id="address-input" class="form-control" rows="4" name="address"  placeholder="Address For Delivery"  required="true" ></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-8 col-sm-offset-3">
              <input id="finish" name="submit" type="submit"  value="Confirm Order" class="btn btn-success">
            </div>
          </div>
          <div class="form-group hide">
            <div class="col-sm-8 col-sm-offset-3">
              <input id="hmm" name="submit" type="button" data-toggle="modal" data-target="#confirm" value="Confirm Order" class="btn btn-success">
            </div>
          </div>
           <div class="form-group hide">
            <div class="col-sm-8 col-sm-offset-3">
              <input id="errorss" name="submit" type="button" data-toggle="modal" data-target="#errorinorder" value="Error message" class="btn btn-success">
            </div>
          </div>
        </form>
      </div>


      <div class="text-center subarea display-none">
        <label class="text-center"><span class="white">Please select an area for delivery</span><br>
          <br>
          <center>
            <select required="" id="area">
             <option >Kadugodi,Bangalore</option>
             <option >Kannamangla,Bangalore</option> 
             <option >Seegehalli,Bangalore</option> 
           </select>
         </center>
         <br>
         <span class="white"><h5>Order Timing 11:00 am to 10:00 pm</h5></span>
         <br>
         <h5 id="time" class="white"></h5>
         <br>
         <br>
       </label>
       <div class="row">

        <div class="col-sm-4 col-sm-offset-4 col-xs-4 col-xs-offset-4">
          <button id="delivery" class="btn btn-success"> Proceed </button>
        </div>
      </div>
    </div>
    <!-- End Delivery Details -->
    <!-- Order Summary -->
    <div id="line-items">
      <center class="dotted-bottom-border white">
       Order Total : &#8377<span id="total">0</span>
     </center>
     <center><h6 class="white">*inclusive of packaging and delivery charges</h6></center> 
   </div>
   <!-- End Order Summary -->
   <div class="finish-message display-none white">
    <h3 class="text-center"><i>Thanks For Ordering</i></h3>
    <br>
    <br>
    <h5 class="text-center">You Will Recieve order within 40 minutes </h5>
  </div>

</div>
<center>
  <button class="btn btn-success js-proceed"> Proceed </button>
  <!-- <p class="white">All our chaatboxes are sold out for today. Please check us back tomorrow and we will definitely have them available for you. </p> -->
</center>
<h4 class="please-select text-center red"></h4>
<h4 id="minorder" class="white display-none text-center">**Minimum order amount is &#8377 60**</h4>
</div>


<div id="line-item-container" class="hide" >
  <div class="well well-sm bg-white line-item margin-5">
    <div class="row">
     <div class="col-sm-6 col-xs-6">
       <h5 id="line-item-inner" class="item-name"> </h5>
     </div>
     <div class="col-sm-1 col-xs-1 col-sm-offset-4 col-xs-offset-5 cross">
       <p class="red"><a href="#">&times</a></p>
     </div>
   </div>
   <div class="row">
    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-addon minus"><b><a href="#">-</b></a></span>
        <input type="integer" class="form-control num" area-label="Quantity" value="1">
        <span class="input-group-addon plus"><b><a href="#">+</b></a></span>
      </div>
    </div>
    <div class="col-md-6"> 
      <span class="prices hide"></span>
      <span class="item-price"> &#8377<i class="pricess"></i></span>
    </div>
  </div>
</div>
</div>
</div>


<div class="modal" id="confirm" tabindex="-1" role="dialog" aria-labelledby="confirmLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <i><h3 class="modal-title text-center" id="confirmLabel">Thank You For Ordering</h3></i>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-8">
            <div class=" col-sm-12">
              <i><h4 class="confirmtotal"></h4></i>
            </div>
            <br>
            <div class=" col-sm-12">
              <i><h4 class="discounttotal"></h4></i>
            </div>
            <div class="col-sm-12 ">
              <i><h4 class="red">**We will deliver within 45 minutes**</h4></i>
            </div>
          </div>
          <div class="col-sm-4">
            <%= image_tag "deliveryboy.png",class:"bg-transparent",width:"140",height:"140" %>
          </div>
        </div>
        <br>
        <div class="row">

          <div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
            <p class="fb-like" data-href="https://www.facebook.com/chaatbox" data-layout="standard" data-action="like" data-show-faces="true" data-share="true">
            </p>
          </div>
          <div class="col-sm-2 col-sm-offset-5">
            <form action="http://www.chaatbox.com/" method="get">
              <button class="btn btn-danger float-right margin-right">Close</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>






<div class="modal" id="errorinorder" tabindex="-1" role="dialog" aria-labelledby="confirmLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
       <i><h3 class="modal-title text-center" id="confirmLabel">Oops something went wrong,please try again</h3></i>
    <br>
    <br>
          <div class="col-sm-2 col-sm-offset-5">
            <form action="http://www.chaatbox.com/" method="get">
              <button class="btn btn-danger float-right margin-right">Close</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
